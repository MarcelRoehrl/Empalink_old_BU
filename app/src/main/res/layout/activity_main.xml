<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/status_card_polar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/mtrl_card_spacing"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/connection_icon_polar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/disconnected">
            </ImageView>

            <TextView
                android:id="@+id/status_polar"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:textSize="24sp"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/connection_icon_polar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/caption_polar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/status_polar"
                app:layout_constraintLeft_toLeftOf="@id/status_polar"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/battery_polar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:visibility="gone"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/status_polar"
                app:layout_constraintLeft_toRightOf="@id/status_polar"
                style="@style/TextAppearance.MaterialComponents.Caption"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/status_card_empatica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/status_card_polar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/mtrl_card_spacing"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/connection_icon_empatica"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/disconnected">
            </ImageView>

            <TextView
                android:id="@+id/status_empatica"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:textSize="24sp"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/connection_icon_empatica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/caption_empatica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/status_empatica"
                app:layout_constraintLeft_toLeftOf="@id/status_empatica"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/battery_empatica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:visibility="gone"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/status_empatica"
                app:layout_constraintLeft_toRightOf="@id/status_empatica"
                style="@style/TextAppearance.MaterialComponents.Caption"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/middle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/livedata_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_card_empatica">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/surveyFAB"
            app:borderWidth="-1dp"
            android:backgroundTint="@color/marker_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recordButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            app:fabCustomSize="80dp"
            android:onClick="onSurveyClicked"
            android:elevation="5dp"/>

        <ImageView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@+id/surveyFAB"
            app:layout_constraintRight_toRightOf="@+id/surveyFAB"
            app:layout_constraintTop_toTopOf="@+id/surveyFAB"
            app:layout_constraintBottom_toBottomOf="@+id/surveyFAB"
            android:src="@drawable/survey"
            android:elevation="15dp"/>

        <ImageButton
            android:id="@+id/recordButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/surveyFAB"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="8dp"
            app:layout_constraintDimensionRatio="1:1"
            android:background="@drawable/play"
            android:onClick="onRecordClicked"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/livedata_card"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/mtrl_card_spacing"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/livedata"
                android:layout_margin="21dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:textSize="24sp"
                android:text="Livedaten">
            </TextView>


            <TextView
                android:id="@+id/bpm_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="@id/livedata"
                app:layout_constraintTop_toBottomOf="@+id/livedata"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Puls ">
            </TextView>

            <TextView
                android:id="@+id/bpm_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/bpm_label"
                app:layout_constraintTop_toTopOf="@+id/bpm_label"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:textSize="16sp"
                android:text="-">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/bpm_value"
                app:layout_constraintTop_toTopOf="@+id/bpm_label"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:textSize="16sp"
                android:text=" bpm">
            </TextView>


            <TextView
                android:id="@+id/temp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/livedata"
                app:layout_constraintTop_toBottomOf="@+id/bpm_label"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Temperatur ">
            </TextView>

            <TextView
                android:id="@+id/temp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/temp_label"
                app:layout_constraintTop_toTopOf="@+id/temp_label"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:textSize="16sp"
                android:text="-">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/temp_value"
                app:layout_constraintTop_toTopOf="@+id/temp_label"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:textSize="16sp"
                android:text=" C°">
            </TextView>


            <TextView
                android:id="@+id/acc_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/livedata"
                app:layout_constraintTop_toBottomOf="@+id/temp_label"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Beschleunigung ">
            </TextView>

            <TextView
                android:id="@+id/acc_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/acc_label"
                app:layout_constraintTop_toTopOf="@+id/acc_label"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:textSize="16sp"
                android:text="   -">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33sp"
                app:layout_constraintLeft_toRightOf="@id/acc_label"
                app:layout_constraintTop_toTopOf="@+id/acc_label"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:textSize="16sp"
                android:text=" g">
            </TextView>


            <TextView
                android:id="@+id/eda_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="@id/eda_unit"
                app:layout_constraintTop_toTopOf="@+id/bpm_label"
                android:layout_marginRight="42sp"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="EDA ">
            </TextView>

            <TextView
                android:id="@+id/eda_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/eda_label"
                app:layout_constraintTop_toTopOf="@+id/eda_label"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:textSize="16sp"
                android:text="    -">
            </TextView>

            <TextView
                android:id="@+id/eda_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/eda_label"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:textSize="16sp"
                android:text=" μS">
            </TextView>


            <TextView
                android:id="@+id/ibi_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/eda_label"
                app:layout_constraintTop_toBottomOf="@+id/eda_label"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="IBI ">
            </TextView>

            <TextView
                android:id="@+id/ibi_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/ibi_label"
                app:layout_constraintTop_toTopOf="@+id/ibi_label"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:textSize="16sp"
                android:text="    -">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                app:layout_constraintLeft_toRightOf="@id/ibi_label"
                app:layout_constraintTop_toTopOf="@+id/ibi_label"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:textSize="16sp"
                android:text=" s">
            </TextView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/showDataButton"
                app:layout_constraintTop_toBottomOf="@id/acc_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                app:strokeColor="#0D47A1"
                android:text="Aufnahmen anzeigen"
                android:textColor="#0D47A1"
                android:textSize="16sp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:onClick="onShowDataClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backgroundShowDataButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_margin="8dp"
        app:strokeColor="#0D47A1"
        android:text="Aufnahmen anzeigen"
        android:textColor="#0D47A1"
        android:textSize="16sp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:onClick="onShowDataClicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

