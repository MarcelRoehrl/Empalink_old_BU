        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:text="Wie schwierig sind Deine Arbeitsaufgaben, die Du gerade erledigst?" />

        <com.xw.repo.BubbleSeekBar
            android:id="@+id/slider1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bsb_thumb_color="#6200EE"
            app:bsb_second_track_color="#6200EE"
            app:bsb_max="100"
            app:bsb_min="0"
            app:bsb_progress="0"
            app:bsb_track_size="2dp"
            app:bsb_thumb_radius="10dp"
            app:bsb_thumb_radius_on_dragging="12dp"
            app:bsb_section_count="20"
            app:bsb_section_text_position="below_section_mark"
            app:bsb_show_section_mark="true"
            app:bsb_touch_to_seek="true"
            app:bsb_auto_adjust_section_mark="true"
            app:bsb_show_thumb_text="true"
            app:bsb_show_section_text="false"
            app:bsb_hide_bubble="true"
            app:bsb_track_color="@color/background_bar"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
